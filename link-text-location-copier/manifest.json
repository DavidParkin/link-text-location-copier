{
  "manifest_version": 2,
  "name": "Link Text and Location Copier",
  "description": "__MSG_extensionDescription__",
  "version": "1.8.5",
  "homepage_url": "https://evilnickname.github.io/link-text-location-copier",
  "default_locale": "en",

  "background": {
    "scripts": [
	  "browser-polyfill.js",
      "defaults.js",
      "linktextlocationcopier.js"
    ]
  },

  "options_ui": {
    "open_in_tab": true,
    "page": "options/index.html"
  },

  "icons": {
    "48": "paint-brush.svg",
    "96": "paint-brush.svg"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite",
	 "tabs", "http://*/*", "https://*/*",
    "storage"
  ]

  }
